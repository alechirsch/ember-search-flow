{{input
	class="search-flow_input"
	value=value
	placeholder=placeholder
	focus-out=(action "inputBlurred")
	focus-in=(action "inputFocused")
	key-down=(action "inputKeyDown")
	key-up=(action "inputKeyUp")
	enter=(action "inputEntered")
}}
{{#if filter.isFocused}}
	{{search-flow/dropdown
		options=availableOptions
		activeOption=activeOption
		isContains=filter.isContains
		isLoading=isLoading
		selectOption=(action 'selectOption')
	}}
{{/if}}