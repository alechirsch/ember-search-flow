<Input
	class="search-flow_input"
	@value={{this.value}}
	placeholder={{this.placeholder}}
	{{on 'focus-out' (action 'inputBlurred')}}
	{{on 'focus-in' (action 'inputFocused')}}
	{{on 'key-down' (action 'inputKeyDown')}}
	{{on 'key-up' (action 'inputKeyUp')}}
	{{on 'enter' (action 'inputEntered')}}
/>
{{#if this.filter.isFocused}}
	<SearchFlow::Dropdown
		@options={{this.availableOptions}}
		@activeOption={{this.activeOption}}
		@isContains={{this.filter.isContains}}
		@isLoading={{this.isLoading}}
		@selectOption={{action 'selectOption'}}
	/>
{{/if}}